generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id_role   Int      @id @default(autoincrement())
  role_name String   @unique @db.VarChar(50)
  createdAt DateTime @default(now()) @map("created_at")
  users     User[]

  @@map("roles")
}

model User {
  user_id     String   @id @default(uuid()) @db.Uuid
  username    String   @unique @db.VarChar(100)
  email       String   @unique @db.VarChar(100)
  password_hash String   @db.VarChar(255)
  id_role     Int      @default(2) // Default to 'user' role, assuming id_role=2 for 'user'
  createdAt   DateTime @default(now()) @map("created_at")
  role        Role     @relation(fields: [id_role], references: [id_role], onDelete: Restrict)

  profile UserProfile? // Relaci√≥n 1:1 con el perfil de usuario

  @@map("users")
}

model UserProfile {
  user_id             String   @id @db.Uuid
  fullname            String?  @db.VarChar(200)
  bio                 String?
  profile_picture_url String?  @db.VarChar(255)
  interests           String[] @db.VarChar(50)

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([interests], type: Gin)
  @@map("user_profiles")
}